{
    "output_path": "training_output",
    "run_name": "Tacotron2-DDC-CV-LT-Multispeaker",
    "project_name": "MSc-TTS-Thesis",
    "model": "tacotron2",
    "tacotron2_DDC_params": {
        "encoder_type": "default",
        "decoder_type": "default",
        "stopnet_type": "default",
        "use_forward_attn": false
    },
    "characters": {
        "pad": "_",
        "eos": "~",
        "bos": "^",
        "characters": "aąbcčdeęėfghiįyjklmnoprsštuųūvzž",
        "punctuations": " .,-",
        "phonemes": null
    },
    "audio": {
        "fft_size": 1024,
        "win_length": 1024,
        "hop_length": 256,
        "frame_shift_ms": null,
        "frame_length_ms": null,
        "stft_pad_mode": "reflect",
        "sample_rate": 22050,
        "resample": false,
        "preemphasis": 0.0,
        "ref_level_db": 0,
        "do_sound_norm": false,
        "log_func": "np.log10",
        "do_trim_silence": true,
        "trim_db": 60,
        "do_rms_norm": false,
        "db_level": null,
        "power": 1.5,
        "griffin_lim_iters": 60,
        "num_mels": 80,
        "mel_fmin": 50.0,
        "mel_fmax": 7600.0,
        "spec_gain": 1,
        "do_amp_to_db_linear": true,
        "do_amp_to_db_mel": true,
        "pitch_fmax": 640.0,
        "pitch_fmin": 0.0,
        // "signal_norm": true,
        "min_level_db": -100,
        "symmetric_norm": true,
        "max_norm": 4.0,
        "clip_norm": true
    },
    "training_seed": 54321,
    "batch_size": 32,
    "eval_batch_size": 32,
    "num_loader_workers": 8,
    "num_eval_loader_workers": 8,
    "precompute_num_workers": 8,
    "run_eval": true,
    "epochs": 400,
    "test_delay_epochs": 399,
    "print_step": 25,
    "plot_step": 100,
    "save_step": 2000,
    "save_best_after": 2000,
    "save_n_checkpoints": 5,
    "print_eval": false,
    "optimizer": "AdamW",
    "optimizer_params": {
        "betas": [
            0.9,
            0.998
        ],
        "weight_decay": 1e-6
    },
    "lr": 1e-3,
    "lr_scheduler": "StepLR",
    "lr_scheduler_params": {
        "gamma": 0.1,
        "step_size": 5000
    },
    "max_decoder_steps": 2000,
    "double_decoder_consistency": true,
    "scheduler_after_epoch": false,
    "use_grad_clip": true,
    "grad_clip_thresh": 1.0,
    "mixed_precision": false,
    "shuffle": false,
    "drop_last": false,
    "use_speaker_embedding": true,
    "speakers_file": null,
    "speaker_embedding_dim": 512,
    "num_speakers": 20,
    "datasets": [
        {
            "name": "liepa2_lt_multispeaker",
            "path": "data/processed/tts_dataset_liepa2_multispeaker/",
            "meta_file_train": "metadata.csv",
            "formatter": "ljspeech_multispeaker",
            "language": "lt"
        }
    ],
    "test_sentences": [
        "aš labai mėgstu skaityti knygas.",
        "šiandien oras yra puikus idealiai tinkantis pasivaikščiojimams gamtoje.",
        "technologijos sparčiai keičia mūsų kasdienį gyvenimą ir darbo būdus.",
        "muzika turi galią sujungti žmones iš skirtingų kultūrų ir kalbų.",
        "kelionės atveria protą naujoms idėjoms ir patirtims."
    ]
}